<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:h2:file:./bd/inventory;DB_CLOSE_ON_EXIT=FALSE;AUTO_SERVER=TRUE;OLD_INFORMATION_SCHEMA=TRUE;DATABASE_TO_UPPER=false</property>
    <property name="connection.driver_class">org.h2.Driver</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <!--<property name="show_sql">true</property>-->
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
    <!--<property name="hibernate.hbm2ddl.auto">create</property> -->
    <property name="hibernate.connection.username">inventory</property>
    <property name="hibernate.connection.password">123456</property>
    <mapping class="mo.inventory.entity.Structure"/>
    <mapping class="mo.inventory.entity.Persona"/>
    <mapping class="mo.inventory.entity.Help"/>
    <mapping class="mo.inventory.entity.StatusActive"/>
    <mapping class="mo.inventory.entity.FunctionActive"/>
    <mapping class="mo.inventory.entity.TypeObject"/>
    <mapping class="mo.inventory.entity.CategoryActive"/>
    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>